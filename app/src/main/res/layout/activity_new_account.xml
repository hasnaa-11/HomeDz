<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.NewAccountActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Inscription"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13999999" />

    <EditText
        android:id="@+id/nc_nom_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nom"
        android:paddingHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/nc_prenom_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Prénom"
        android:paddingHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="@+id/nc_nom_et"
        app:layout_constraintStart_toStartOf="@+id/nc_nom_et"
        app:layout_constraintTop_toBottomOf="@+id/nc_nom_et" />

    <EditText
        android:id="@+id/nc_email_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Email"
        android:paddingHorizontal="8dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/nc_prenom_et"
        app:layout_constraintStart_toStartOf="@+id/nc_prenom_et"
        app:layout_constraintTop_toBottomOf="@+id/nc_prenom_et" />

    <EditText
        android:id="@+id/nc_password_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Mot de passe"
        android:paddingHorizontal="8dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/nc_email_et"
        app:layout_constraintStart_toStartOf="@+id/nc_email_et"
        app:layout_constraintTop_toBottomOf="@+id/nc_email_et" />

    <EditText
        android:id="@+id/nc_phone_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Téléphone"
        android:paddingHorizontal="8dp"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/nc_password_et"
        app:layout_constraintStart_toStartOf="@+id/nc_password_et"
        app:layout_constraintTop_toBottomOf="@+id/nc_password_et" />

    <Button
        android:id="@+id/nc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Inscription"
        app:layout_constraintEnd_toEndOf="@+id/nc_phone_et"
        app:layout_constraintTop_toBottomOf="@+id/nc_phone_et" />
</androidx.constraintlayout.widget.ConstraintLayout>